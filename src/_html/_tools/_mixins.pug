    Приер:
        +svgIcon('vk')
        +svgIcon('vk', 'social')

mixin svgIcon(icon, className)
    svg(class= className).svg-icon
        use(xlink:href="assets/img/svgSprite.svg#" + icon)

mixin img(src, alt, lazy = true, placeholder )
  -
    var webp = src.substr(0, src.lastIndexOf('.')) + '.webp';
  picture
    source(data-srcset=webp, type="image/webp")
    if lazy
      img(data-src=src, alt=alt ? alt : '', src=placeholder).lazy
    else
      source(srcset=webp, type="image/webp")
      img(src=src, alt=alt)